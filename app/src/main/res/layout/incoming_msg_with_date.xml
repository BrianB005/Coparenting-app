<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/03/2023"
        tools:ignore="HardcodedText"
        android:paddingVertical="8dp"
        android:layout_gravity="center_horizontal"
        style="@style/greyText"
        android:id="@+id/date"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#3F3F40"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginVertical="3dp">
        <LinearLayout
            tools:ignore="HardCodedText"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="30dp"
                android:layout_marginEnd="10dp"
                app:strokeWidth="2dp"
                android:background="#323333"
                app:strokeColor="@color/blue"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/profile_pic"
                    android:contentDescription="@null"


                    />


            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/whiteText.small"
                        android:id="@+id/name"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10:43 am"
                        android:gravity="end"
                        android:id="@+id/time"
                        style="@style/greyText.small"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In the end wr all get watryayayyauaba dduuuu"
                    style="@style/whiteText"
                    android:id="@+id/messageTitle"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/greyText.small"
                    android:id="@+id/messageBody"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginVertical="8dp"
                    android:id="@+id/cardView"

                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/shared_image"
                        android:scaleType="centerCrop"
                        android:contentDescription="@null"

                        />
                    <VideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/shared_video"
                        android:visibility="gone"
                        />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>