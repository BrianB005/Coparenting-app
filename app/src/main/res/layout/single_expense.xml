<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardCodedText"
    android:layout_marginVertical="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            android:layout_marginEnd="10dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/blue"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/profile_pic"
                android:contentDescription="@null"

                />



        </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brian Bett"
                    android:id="@+id/name"
                    style="@style/whiteText"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:23 am"
                    style="@style/greyText"
                    android:id="@+id/time"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    style="@style/whiteText.small"
                    android:layout_marginVertical="6dp"
                    android:id="@+id/expense_title"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School"
                    style="@style/greyText.small"
                    android:id="@+id/category"
                    android:layout_marginVertical="6dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Kshs 870"
                    android:id="@+id/expense_amount"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    app:drawableStartCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:textStyle="bold"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/is_paid"
                        android:layout_marginEnd="4dp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My share"
                            style="@style/greyText.small"


                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kshs 430"
                            style="@style/whiteText"

                            android:id="@+id/my_amount"
                            android:layout_marginVertical="6dp"/>
                    </LinearLayout>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="1dp"
                    android:backgroundTint="@color/dark_gray"
                    android:layout_height="match_parent"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/is_co_paid"
                        android:layout_marginEnd="4dp"
                        app:drawableStartCompat="@drawable/ic_baseline_check_circle_outline_24" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clarence share"
                            android:id="@+id/co_share"
                            style="@style/greyText.small"


                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kshs 430"
                            style="@style/whiteText"
                            android:id="@+id/co_amount"
                            android:layout_marginVertical="6dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/buttons"
                >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/extra_extra_light_gray"
                    app:cornerRadius="15dp"
                    android:paddingHorizontal="28dp"
                    android:text="Reject"
                    android:id="@+id/reject"
                    app:strokeColor="@color/blue"
                    app:strokeWidth="2dp"
                    style="?attr/materialButtonOutlinedStyle"

                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="1dp"
                    android:backgroundTint="@color/dark_gray"
                    android:layout_height="match_parent"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/extra_extra_light_gray"
                    app:cornerRadius="15dp"
                    android:paddingHorizontal="28dp"
                    android:text="Accept"

                    android:id="@+id/accept"
                    app:strokeColor="@color/blue"
                    android:backgroundTint="@color/blue"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:id="@+id/status"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You rejected the application"
                android:textColor="#C61E1E"
                android:id="@+id/rejected"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="She'll be in school on that said day!"
                style="@style/whiteText.small"
                android:layout_marginTop="10dp"
                android:id="@+id/rejection_msg"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You accepted the application"
                android:textColor="#23E30E"
                android:id="@+id/accepted"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request sent"
                style="@style/whiteText.small"
                android:layout_marginTop="10dp"
                android:id="@+id/awaiting"
                android:visibility="gone"
                />


        </LinearLayout>



    </LinearLayout>


</com.google.android.material.card.MaterialCardView>