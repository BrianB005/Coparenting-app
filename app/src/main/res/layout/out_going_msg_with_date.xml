<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="end"

    android:orientation="vertical"


    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/03/2023"
        tools:ignore="HardcodedText"
        android:paddingVertical="8dp"
        style="@style/greyText"
        android:layout_gravity="center_horizontal"

        android:id="@+id/date"/>


    <LinearLayout

        tools:ignore="HardCodedText"
        android:layout_width="wrap_content"
        android:padding="13dp"
        android:layout_gravity="end"
        android:layout_marginStart="50dp"

        android:background="@drawable/outgoing_message_bg"
        android:orientation="horizontal"



        android:layout_marginVertical="3dp"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:minWidth="90dp"
            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You"
                    style="@style/whiteText.small"
                    android:id="@+id/name"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:43 am"
                    android:gravity="end"
                    android:id="@+id/time"
                    style="@style/greyText.small"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="In the end wr all get aba dduuuu  ygguuu uuuuuuuuyyyyyyyyyuuuyuu "
                style="@style/whiteText"

                android:id="@+id/messageTitle"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IN the sajaddhja akjhdbv aojhgvallakjhgddijck adoiuyhjdb czsiadjouhedsbzx osdjhxbv"
                style="@style/greyText"
                android:id="@+id/messageBody"/>
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="160dp"
                app:cardCornerRadius="20dp"
                android:layout_marginVertical="8dp"
                android:id="@+id/cardView"

                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/shared_image"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null"

                    />
                <VideoView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/shared_video"
                    android:visibility="gone"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="30dp"
            android:layout_marginStart="10dp"
            app:strokeWidth="2dp"
            android:background="#323333"
            app:strokeColor="@color/blue"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/profile_pic"
                android:contentDescription="@null"


                />


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</LinearLayout>


