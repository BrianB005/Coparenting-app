<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="15dp"
    android:layout_marginHorizontal="6dp"

    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardCodedText"
    android:paddingEnd="40dp"
    android:paddingStart="0dp"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="30dp"
        android:layout_marginEnd="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/blue"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/profile_pic"
            android:contentDescription="@null"
            android:src="@drawable/kid1"

            />


    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jane"
                style="@style/whiteText.small"
                android:id="@+id/name"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:43 am"
                android:gravity="end"
                android:id="@+id/time"
                style="@style/greyText.small"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In the end we all get what we deserve"
            style="@style/whiteText"
            android:id="@+id/messageTitle"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In the end we all get what we deserve"
            style="@style/greyText.small"
            android:id="@+id/messageBody"/>
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="160dp"
            app:cardCornerRadius="20dp"
            android:layout_marginVertical="8dp"
            android:id="@+id/cardView"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/shared_image"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                android:src="@drawable/kid2"
                />
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/shared_video"
                android:visibility="gone"
                />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>