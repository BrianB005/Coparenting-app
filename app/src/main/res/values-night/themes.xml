<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Coparenting" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/extra_extra_light_gray</item>
        <item name="android:textColorPrimary">@color/extra_extra_light_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/extra_extra_light_gray</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/extra_extra_light_gray</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorOutline">@color/extra_extra_light_gray</item>
        <item name="itemBackground">?attr/colorPrimary</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>


        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>

        <item name="android:textColor">@color/extra_extra_light_gray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="itemIconTint">@color/extra_extra_light_gray</item>
    </style>
</resources>